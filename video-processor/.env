# สภาพแวดล้อม
NODE_ENV=production

# พอร์ตและโฮสต์
PORT=3001
HOST=0.0.0.0

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_VIDEO_BUCKET=footfit-video
MINIO_TEMP_BUCKET=footfit-temp
MINIO_USE_SSL=false

# การตั้งค่า FFmpeg
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
TEMP_DIR=/tmp/videos
MAX_PARALLEL_PROCESSES=4

# การตั้งค่าวิดีโอ
VIDEO_MAX_DURATION=300
VIDEO_MAX_SIZE=100000000
VIDEO_FORMATS=mp4,mov,avi,wmv,flv,mkv
THUMBNAIL_QUALITY=85
THUMBNAIL_SIZE=480x360
DEFAULT_OUTPUT_FORMAT=mp4
DEFAULT_VIDEO_BITRATE=2000k
DEFAULT_AUDIO_BITRATE=128k

# การตั้งค่า Node.js
NODE_OPTIONS=--max-old-space-size=2048
WEB_CONCURRENCY=4

# การตั้งค่า Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/video-processor.log 