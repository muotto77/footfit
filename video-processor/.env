# สภาพแวดล้อม
NODE_ENV=production

# พอร์ตและโฮสต์
PORT=3001
HOST=0.0.0.0

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO
MINIO_ENDPOINT=footfit-minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=videos

# Supabase (เพิ่มใหม่)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-key

# การตั้งค่า FFmpeg
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
TEMP_DIR=/app/temp
MAX_PARALLEL_PROCESSES=4

# การตั้งค่าวิดีโอ
VIDEO_MAX_DURATION=300
VIDEO_MAX_SIZE=100000000
VIDEO_FORMATS=mp4,mov,avi,wmv,flv,mkv
THUMBNAIL_QUALITY=80
THUMBNAIL_SIZE=320x180
DEFAULT_OUTPUT_FORMAT=mp4
DEFAULT_VIDEO_BITRATE=2000k
DEFAULT_AUDIO_BITRATE=128k

# การตั้งค่า Node.js
NODE_OPTIONS=--max-old-space-size=2048
WEB_CONCURRENCY=4

# การตั้งค่า Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/video-processor.log

# ตั้งค่าการประมวลผลวิดีโอ
MAX_VIDEO_SIZE_MB=50
VIDEO_PROCESSING_TIMEOUT_SEC=300
VIDEO_OUTPUT_FORMAT=mp4
VIDEO_BITRATE=1500k
VIDEO_RESOLUTION=720p

# ตั้งค่าเซิร์ฟเวอร์
SERVER_PORT=3001
TEMP_DIR=/app/temp
MAX_VIDEO_DURATION_SEC=60 