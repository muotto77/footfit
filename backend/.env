# สภาพแวดล้อม
NODE_ENV=production

# พอร์ตและโฮสต์
PORT=3000
HOST=0.0.0.0

# การเชื่อมต่อฐานข้อมูล
DB_HOST=postgres
DB_PORT=5432
DB_USER=footfit
DB_PASSWORD=your_strong_password
DB_NAME=footfit

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=footfit
MINIO_PROFILE_BUCKET=footfit-profile
MINIO_VIDEO_BUCKET=footfit-video
MINIO_TEAM_BUCKET=footfit-team
MINIO_PRODUCT_BUCKET=footfit-product
MINIO_USE_SSL=false

# JWT
JWT_SECRET=your_long_random_jwt_secret
JWT_EXPIRE=86400

# OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ระบบชำระเงิน (สำหรับทดสอบ)
STRIPE_TEST_SECRET_KEY=your_stripe_test_key
OMISE_TEST_PUBLIC_KEY=your_omise_test_public_key
OMISE_TEST_SECRET_KEY=your_omise_test_secret_key

# ตั้งค่า Node.js
NODE_OPTIONS=--max-old-space-size=3072
WEB_CONCURRENCY=8

# การตั้งค่า Video Processing
VIDEO_PROCESSOR_URL=http://video-processor:3001
MAX_VIDEO_DURATION=300
MAX_VIDEO_SIZE=100000000

# การตั้งค่า Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/backend.log 